<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/style.css" type="text/css">
    <link rel="icon" href="https://assets.tobys.cloud/favicon.ico">
    <title>hivemind</title>
  </head>

  <body class="font-serif min-h-screen p-8 bg-gray-50">
    <div class="max-w-4xl mx-auto">
      <header>
        <div style="text-align: center; font-size: 2em;">🐝🧠</div>

        <nav class="flex justify-between my-8">
          <% if current_user %>
            <a class="transition duration-200 ease-in-out border-b-2 border-black hover:border-indigo-500 hover:text-indigo-500" href="/epubs">books</a>
            <a class="transition duration-200 ease-in-out border-b-2 border-black hover:border-indigo-500 hover:text-indigo-500" href="/epubs/upload">upload book</a>
            <span>
              @<%= current_user.username %>:
              <a class="transition duration-200 ease-in-out border-b-2 border-black hover:border-indigo-500 hover:text-indigo-500" href="/logout">log out</a>
            </span>
          <% end %>
        </nav>
      </header>
    </div>

    <div class="max-w-6xl mx-auto mt-16">
      <main><%= yield %></main>
    </div>
  </body>
</html>
