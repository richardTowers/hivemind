<div class="flex flex-col justify-between h-full flex-grow">
<div>
  <h1><%= @epub.title %></h1>

  <a href="/epubs/<%= @epub.id %>">view epub</a>
</div>

<%= erb :"epubs/_nav" %>

<section class="w-full max-w-xl mx-auto flex-grow mt-auto relative">
  <iframe src="<%= @epub.href_path(@item.href) %>"
          type="<%= @item.media_type %>"
          style="width: 100%;"
          class="w-full absolute top-0 bottom-0 left-0 right-0 h-full"
          id="embedded-content">
  </iframe>
</section>

<%= erb :"epubs/_nav" %>
</div>
