<nav>
  <table style="width: 100%; text-align: center;""><tbody><tr>
    <td>
      <% if @epub.prev_href(@item.id).nil? %>
      <span>⇤</span>
      <% else %>
      <a href="<%= @epub.href_path(@epub.prev_href(@item.id) ) %>?read#read-start">←</a>
      <% end %>
    </td>

    <td>
      <% if @show_bookmark_button %>
      <form action="/epubs/<%= @epub.id %>/bookmark" method="POST">
        <input type="hidden" name="href" value="<%= @href %>"/%>
        <button class="text-xs inline-block p-4 uppercase tracking-widest bg-indigo-500 hover:bg-indigo-700 text-white outline-none focus:ring ring-indigo-200"
                name="status" value="wants-to-read">
        bookmark
        </button>
        <%= csrf_token_hidden_input %>
      </form>
      <% end %>
    </td>

    <td>
      <% if @epub.next_href(@item.id).nil? %>
      <span>⇥</span>
      <% else %>
      <a href="<%= @epub.href_path(@epub.next_href(@item.id) ) %>?read#read-start">→</a>
      <% end %>
    </td>
  </tr></tbody></table>
</nav>
