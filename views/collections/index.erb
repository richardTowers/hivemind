<div>
  <header class="flex mb-32 items-end">
    <h1 class="text-4xl mr-8">collections</h1>

    <p class="text-gray-500 mr-8"><%= @collections.count %> collections in library</p>

    <p class="text-gray-500">
      <a class="underline hover:text-indigo-500" href="/collections/new">create a new collection</a>
    </p>
  </header>

  <% @collections.sort_by(&:title).each do |collection| %>
    <p class="mt-4">
      <a class="underline hover:text-indigo-500" href="/collections/<%= collection.id %>">
        <%= collection.title %>
      </a>
      by
      <a class="underline hover:text-indigo-500" href="<%= collection.creator.show_path %>">
        @<%= collection.creator.username %>
      </a>
    </p>
  <% end %>
</div>
